<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pm.mapper.LoginLogMapper">
    <resultMap id="BaseResultMap" type="com.pm.domain.LoginLog">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="ip" property="ip" jdbcType="VARCHAR"/>
        <result column="port" property="port" jdbcType="INTEGER"/>
        <result column="login_time" property="loginTime" jdbcType="TIMESTAMP"/>
        <association property="loginUser" javaType="com.pm.domain.User" column="id"
                     select="com.pm.mapper.UserMapper.getById"/>
    </resultMap>

    <insert id="insert" parameterType="com.pm.domain.LoginLog">
        insert into login_log (ip, port,
          login_time, login_user)
        values (#{ip,jdbcType=VARCHAR}, #{port,jdbcType=INTEGER},
          #{loginTime,jdbcType=TIMESTAMP}, #{loginUser.id,jdbcType=BIGINT})
    </insert>

    <select id="getAll" resultMap="BaseResultMap">
        select * from login_log
    </select>
</mapper>