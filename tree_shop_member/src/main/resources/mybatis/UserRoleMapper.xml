<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pm.mapper.UserRoleMapper">
    <resultMap id="BaseResultMap" type="com.pm.domain.UserRole">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <association property="user" column="id" select="com.pm.mapper.UserMapper.getById"/>
        <association property="role" column="id" select="com.pm.mapper.RoleMapper.getById"/>
    </resultMap>
    <insert id="insert" parameterType="com.pm.domain.UserRole">
        insert into user_role (user_id, role_id
          )
        values (#{user.id,jdbcType=BIGINT}, #{role.id ,jdbcType=BIGINT}
          )
    </insert>

    <select id="getRoleByUserId" parameterType="long" resultMap="com.pm.mapper.RoleMapper.BaseResultMap">
         select r.* from role r
         left join user_role ur on r.id = ur.role_id
         where user_id = #{user_id,jdbcType=BIGINT}
    </select>
</mapper>