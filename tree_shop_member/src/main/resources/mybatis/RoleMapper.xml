<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pm.mapper.RoleMapper">
    <resultMap id="BaseResultMap" type="com.pm.domain.Role">
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="state" property="state" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.pm.domain.Role" keyProperty="id" keyColumn="id" useGeneratedKeys="true">
        insert into role (name,state)
        values (
          #{name,jdbcType=VARCHAR},
          #{state,jdbcType=INTEGER}
        )
   </insert>

    <update id="update" parameterType="com.pm.domain.Role">
        update role
        set
          name=#{name,jdbcType=VARCHAR},
          state=#{state,jdbcType=INTEGER}
        where id=#{id,jdbcType=BIGINT}
    </update>

    <select id="getByState" parameterType="int" resultMap="BaseResultMap">
        select * from role where state=#{state,jdbcType=INTEGER}
    </select>

    <select id="getAll" resultMap="BaseResultMap">
        select * from role
    </select>

    <select id="getById" parameterType="long" resultMap="BaseResultMap">
        select * from role where id=#{id,jdbcType=BIGINT}
    </select>

    <delete id="delete" parameterType="long">
        delete from user where id=#{id,jdbcType=BIGINT}
    </delete>
</mapper>